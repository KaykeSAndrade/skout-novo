<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eueue"
    android:orientation="vertical"
    tools:context=".MenuPrincipalActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="418dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/lanche" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtNomePrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/ubunturegular"
                android:shadowColor="#43A047"
                android:shadowRadius="5"
                android:text="Hamburguer"
                android:textColor="#FFC107"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="R$ 40"
                android:textColor="#4CAF50"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginLeft="3dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/ubunturegular"
                android:shadowColor="#43A047"
                android:shadowRadius="5"
                android:text="Colocar a descrição do prato"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDiminuirPrato"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="#C81616"
                android:text="-"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/edtQuantidade"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="#fff"
                android:text="  2" />

            <Button
                android:id="@+id/btnAumentarPrato"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:backgroundTint="#307333"
                android:text="+"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"></LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtIngredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="2dp"
            android:text="Ingredientes:"
            android:textColor="#FFFF"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/peguei"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="58dp" />

        <TextView
            android:id="@+id/txtCheddar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cheddar"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDiminuirCheddar"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="#C81616"
                android:text="-"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/edtQuantidadeCheddar"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="#fff"
                android:text="  3" />

            <Button
                android:id="@+id/btnAumentarCheddar"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:backgroundTint="#307333"
                android:text="+"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/maionese2"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="126dp" />

        <TextView
            android:id="@+id/txtMaionese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Maionese"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDiminuirMaionese"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="#C81616"
                android:text="-"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/edtQuantidadeMaionese"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="#fff"
                android:text="  2" />

            <Button
                android:id="@+id/btnAumentarMaionese"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:backgroundTint="#307333"
                android:text="+"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/alface"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="186dp" />

        <TextView
            android:id="@+id/txtAlface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Alface"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDiminuirAlface"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="#C81616"
                android:text="-"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/edtQuantidadeAlface"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="#fff"
                android:text="  0" />

            <Button
                android:id="@+id/btnAumentarAlface"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:backgroundTint="#307333"
                android:text="+"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borda_botao"
            android:backgroundTint="#fff"
            android:text="Confirmar" />

    </LinearLayout>


</LinearLayout>